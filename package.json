{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "huskyinstall": "husky install",
    "pretty": "npm run pretty --workspaces",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspace=@hastearcade/models --workspace=@hastearcade/server --workspace=@hastearcade/web --workspace=@hastearcade/haste-game-domain --workspace=@hastearcade/haste-game-client --workspace=@hastearcade/haste-game-server",
    "cibuild": "npm run build --workspace=@hastearcade/models --workspace=@hastearcade/server --workspace=@hastearcade/web --workspace=@hastearcade/haste-game-domain --workspace=@hastearcade/haste-game-client --workspace=@hastearcade/haste-game-server",
    "citest": "npm run test --workspace=@hastearcade/models --workspace=@hastearcade/server --workspace=@hastearcade/web"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "@types/node": "^14.14.36",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "16.X"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
